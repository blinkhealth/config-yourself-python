[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[pipenv]
# black is still in beta
allow_prereleases = true

[dev-packages]
black = "*"
moto = ">=1.3.8,<2.0.0"
# I have no clue why moto/boto doesn't just require this themselves with pipenv
mock = "<3.0.0,>=2.0.0"
sshpubkeys = "*"

[packages]
pytest = "<4.0.0,>=3.7.0"
pytest-mock = "*"
setuptools-scm = "*"
sphinx = "*"
m2r = "*"
tox = "==3.7.0"
tox-pyenv = ">=1.0.3,<2.0.0"
config-yourself = {editable = true,path = ".",extras = ["all"]}
check-manifest = "<1.0,>=0.35"
pytest-cov = "*"
coverage = "*"

[scripts]
# check files made available in package match our expectations
check-manifest = "check-manifest --ignore tox.ini,.circleci*,tests*"
# build sphinx docs
docs = "sphinx-build -b html -E  docs docs/_build"
# lint them codes
lint = "black config_yourself tests"
# run test suites
test = "pytest -v tests/unit tests/integration"
test-integration = "pytest -v tests/integration"
test-unit = "pytest -v tests/unit"
test-coverage = "pytest -v tests/unit tests/integration --cov=config_yourself --cov-report html:./tests/reports/coverage/"
# run test suite in all supported python versions
tox = "tox --pre"
